      <section class="content"><%- body %></section>

      <footer class="footer bg-dark py-5">
        <div class="container grid grid-3">
          <div>
            <h1>Filipe Figueiredo</h1>
            <p>Copyright &copy; 2021</p>
          </div>
          <nav>
            <ul id="items">
              <% if(typeof language !== 'undefined' && language === 'eng') { %>
              <li><a href="/en/home">Home</a></li>
              <li><a href="/en/projects">Projects</a></li>
              <% } else if (typeof language !== 'undefined' && language ===
              'pt') {%>
              <li><a href="/pt/home">Homepage</a></li>
              <li><a href="/pt/projects">Projetos</a></li>
              <%} else { %>
              <li><a href="/en/home">Home</a></li>
              <li><a href="/en/projects">Projects</a></li>
              <% } %>
            </ul>
          </nav>
          <div class="social">
            <a href="https://github.com/Filz0r"
              ><i class="fab fa-github fa-2x"></i
            ></a>
            <a href="https://www.facebook.com/flip.figz/"
              ><i class="fab fa-facebook fa-2x"></i
            ></a>
            <a href="https://www.instagram.com/filipefigz/"
              ><i class="fab fa-instagram fa-2x"></i
            ></a>
            <a href="mailto:me@filipefigueiredo.xyz"
              ><i class="fas fa-envelope fa-2x"></i
            ></a>
          </div>
        </div>
      </footer>
      <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-angle-double-up"></i></button> 
    </body>
    <script>
      //Get the button:
      mybutton = document.getElementById("myBtn");

      // When the user scrolls down 20px from the top of the document, show the button
      window.onscroll = function () {
        scrollFunction();
      };

      function scrollFunction() {
        if (
          document.body.scrollTop > 20 ||
          document.documentElement.scrollTop > 20
        ) {
          mybutton.style.display = "block";
        } else {
          mybutton.style.display = "none";
        }
      }

      // When the user clicks on the button, scroll to the top of the document
      function topFunction() {
        document.body.scrollTop = 0; // For Safari
        document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
      }
    </script>
  </html>
</html>

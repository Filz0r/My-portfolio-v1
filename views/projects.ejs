<% if (projects.length > 0) { %>

    <section class="projects">
        <div class="container flex">
            <div class="card bg-dark">
                <% if (path === '/en/projects') { %> 
                    <div class="text-center">
                        <h1 class="card-title text-light">My Projects</h1>
                    </div>
                    <div class="card-body grid">
                        <% projects.forEach(project => { %>
                            <div class="card bg-light">
                                <a href="/en/projects/<%= project.slug %>">
                                    <h1 class ="card-title text-center"><%= project.title %></h1>
                                    <img src="/images/covers/<%= project.cover %> " alt="Cover" class="cover">
                                    <div class="card-text"> <%= project.description %></div>
                                </a>
                            </div>
                        <% }) %>
                    </div> 
                <% } else if (path === '/pt/projects') { %>
                    <div class="text-center">
                        <h1 class="card-title text-light">Os meus projetos</h1>
                    </div>
                    <div class="card-body grid">
                        <% projects.forEach(project => { %>
                            <div class="card bg-light">
                                <a href="/pt/projects/<%= project.slug %>">
                                    <h1 class ="card-title text-center"><%= project.title %></h1>
                                    <img src="/images/covers/<%= project.cover %> " alt="Cover" class="cover">
                                    <div class="card-text" style="overflow: hidden;"> <%= project.description %></div>
                                </a>
                            </div>
                        <% }) %>
                    </div> 
                <% } %>            
            </div>
        </div>    
    </section>

<% } else { %>

    <div class="container flex">
        <h1 class='xxl'>No projects :(</h1>
    </div>
    
<% } %> 